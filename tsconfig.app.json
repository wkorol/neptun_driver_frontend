{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "module": "es2015",              // Compatible with older browsers.
    "lib": ["es2015", "dom"],        // Broader support for ES2015 features.
    "types": ["@angular/localize"],  // No change needed.
    "downlevelIteration": true       // Ensure `for...of` and spreads work.
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,      // No change needed.
    "strictInjectionParameters": true, // No change needed.
    "enableIvy": true                   // No change needed.
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
